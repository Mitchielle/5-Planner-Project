                     <div class="mt-4 mb-3 row">
                        <h6 class="col-md-2">Goal: </h6>
                        <div class="col-md-10"><%= goal[i].title %> </div>
                     </div>

                     <div class="mb-3 row">
                        <h6 class="col-md-2">Duration: </h6>
                        <div class="col-md-10"> 
                            <%= goal[i].startDate%> -to- <%= goal[i].endDate %>
                        </div>
                     </div>

                     <div class="mb-3 row">
                        <h6 class="col-md-2">Description: </h6>
                        <div class="col-md-10">
                            <%= goal[i].description%>
                        </div>
                     </div>

