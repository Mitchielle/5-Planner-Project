                                    <div class="form-check col-md-auto">
                                        <% if (prior.checked === 'true') { %>
                                            <a href="/goals/uncheck/<%= user[i].id %>/<%= goal[i].id %>/<%= prior.id %>" id="checker" class="me-2"><i class='far fa-check-square'></i></a>
