
<%- include('../partials/header') %>

<% for (let i = 0; i < user.length; i++) { %>

<div class="container col-md-8">
<%- include('../partials/dropdown') %>
    <div class="card border border-secondary rounded-3 my-4 shadow">
        <div class="card-body mx-md-5">
            <h2 class="card-title my-3 text-center">Profile</h2>
            <div class="container  my-5" >
                <div class="row mt-3">
                    <h6 class="col-md-auto">Name: </h6>
                    <div class="col-md-auto"><%= user[i].name %></div>
                </div>
                <div class="row mt-3">
                    <h6 class="col-md-auto">Email: </h6>
                    <div class="col-md-auto"><%= user[i].email %></div>
                </div>
            </div>
            
            <div class="my-3" style="text-align:center; font-size:15px;"><i>Joined F.I.V.E Planner on <%= user[i].created.toLocaleDateString() %></i></div>
                <div class="d-flex justify-content-center my-3  mx-auto">
                    <a href="/user/<%= user[i].id %>" class="btn btn-secondary rounded-pill px-3 mx-3" >Back</a>
                    <a href="/user/update/<%= user[i].id %>" class="btn btn-primary rounded-pill px-3">Edit</a>
                </div>
        </div>
    </div>
</div>

<% } %>

<%- include('../partials/footer') %>

