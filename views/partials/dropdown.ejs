
<% user.forEach(user => { %>
<div class=" d-flex justify-content-between mx-4">
  <div class="dropdown">
      <h4 class="dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
        <%= user.name %>'s Plans
      </h4>
      <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
        <li><a class="dropdown-item" href="/user/<%= user.id %>">Home</a></li>
        <li><a class="dropdown-item" href="/user/profile/<%= user.id %>">Profile</a></li>
        <li><a class="dropdown-item" href="/user/progress/<%= user.id %>">Progress</a></li>
      </ul>
  </div> 

  <a href="/goals/new/<%= user.id %>" class="btn btn-secondary rounded-pill d-flex flex-row">
    <div class="d-none d-sm-block me-2">New goal</div> 
    <div title="new goal" aria-label="new goal"><i class='fas fa-plus'></i></div>
  </a>
</div>

<% }) %>